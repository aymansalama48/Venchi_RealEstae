<script>
    // عناصر المودال
    var modal = document.getElementById("editProjectModal");
    var modalTitle = document.getElementById("modalTitle");
    var saveButton = document.getElementById("saveButton");

    function openEditModal(button) {
        const projectCard = button.closest('.project-item');
        const projectId = projectCard.dataset.projectId;
        const projectName = projectCard.querySelector('.project-name').textContent;
        const projectLocation = projectCard.querySelector('.project-location').textContent.replace('الموقع: ', '');
        const projectImageSrc = projectCard.querySelector('.project-image').src;

        modalTitle.textContent = "تعديل المشروع";
        saveButton.textContent = "حفظ التغييرات";

        document.getElementById('editProjectId').value = projectId;
        document.getElementById('projectName').value = projectName;
        document.getElementById('projectLocation').value = projectLocation;
        document.getElementById('projectImage').value = projectImageSrc;

        const form = document.getElementById('projectForm');
        form.action = `/CLSprojects/Edit/${projectId}`;

        modal.style.display = "flex";
    }

    function openAddModal() {
        modalTitle.textContent = "إضافة مشروع جديد";
        saveButton.textContent = "إضافة المشروع";

        document.getElementById('editProjectId').value = '';
        document.getElementById('projectName').value = '';
        document.getElementById('projectLocation').value = '';
        document.getElementById('projectImage').value = '';

        const form = document.getElementById('projectForm');
        form.action = "/CLSprojects/Create";

        modal.style.display = "flex";
    }

    function closeEditModal() {
        modal.style.display = "none";
    }

    // منع إغلاق المودال لما تضغط بره
    // (تم حذف window.onclick)

    document.getElementById('projectForm').addEventListener('submit', function (event) {
        const name = document.getElementById('projectName').value;
        const location = document.getElementById('projectLocation').value;

        if (!name || !location) {
            event.preventDefault();
            alert('الرجاء تعبئة جميع الحقول المطلوبة (اسم المشروع والموقع).');
        }
    });

    async function deleteProject(button) {
        const projectCard = button.closest('.project-item');
        const projectId = projectCard.dataset.projectId;
        const projectName = projectCard.querySelector('.project-name').textContent;

        const confirmed = confirm(`هل أنت متأكد أنك تريد حذف مشروع "${projectName}"؟`);

        if (confirmed) {
            document.getElementById("deleteProjectId").value = projectId;
            document.getElementById("deleteProjectForm").submit();
        }
    }
</script>

