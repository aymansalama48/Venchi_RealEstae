@model TestDash.Models.CLSclient

@{
    Layout = "~/Views/Shared/SalesLayout.cshtml";
}


<style>
    .employee-content h2,
    .employee-content p,
    .employee-content h5,
    .employee-content h6,
    .employee-content span,
    .employee-content li,
    .employee-content div,
    .employee-content label {
        color: black !important;
    }
</style>



<!-- Navbar -->
