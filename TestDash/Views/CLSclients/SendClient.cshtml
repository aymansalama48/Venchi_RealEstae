<script>
    function bindSelectAllCheckbox() {
        $('#selectAll').off('click').on('click', function () {
            var isChecked = this.checked;
            $('#myTable').DataTable().rows({ search: 'applied' }).nodes().to$().find('input.rowCheckbox').prop('checked', isChecked);
        });
    }

    $(document).ready(function () {
        var table = $('#myTable').DataTable({
            dom: 'lrtip', // ⬅️ كده الجدول هيشتغل بدون أزرار التصدير والطباعة
            language: {
                search: "بحث:",
                paginate: { next: "التالي", previous: "السابق" },
                info: "عرض _START_ إلى _END_ من أصل _TOTAL_ صف",
                lengthMenu: "عرض _MENU_ صف",
                zeroRecords: "لا توجد بيانات"
            },
            pageLength: 10,
            lengthMenu: [[3, 5, 10, 25, -1], [3, 5, 10, 25, "الكل"]],
            responsive: true,
            ordering: true,
            orderCellsTop: true,
            columnDefs: [
                { orderable: false, targets: [0] }
            ],
            initComplete: function () {
                var api = this.api();
                api.columns().every(function (colIdx) {
                    $('input', api.table().header().rows[0].cells[colIdx]).on('keyup change clear', function () {
                        if (api.column(colIdx).search() !== this.value) {
                            api.column(colIdx).search(this.value).draw();
                        }
                    });
                });
            },
            drawCallback: function () {
                bindSelectAllCheckbox();
            }
        });

        bindSelectAllCheckbox();
    });
</script>


